//re-organized with: https://jsoneditoronline.org/
{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.enchanted_helmet": {
      "states": {
        "default": {
          "transitions": [
            {
              "helmet_on": "variable.helmet_other || variable.helmet_leather"
            },
            {
              "helmet_off": "!variable.helmet_other && !variable.helmet_leather"
            }
          ]
        },
        "helmet_on": {
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": [
            "/tag @s add Helmet_Enchanted",
            "/tell @e[type=player,tag=Test] Helmet is enchanted"//This is just a testing command so we know the animation_controller works in-game
          ]//                                                             (Note:This will only work when the player has the Test tag)
        },
        "helmet_off": {
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": [
            "/tag @s remove Helmet_Enchanted"
          ]
        }
      }
    },
    "controller.animation.enchanted_chestplate": {
